<Window x:Class="CafeManager3.View.MainMenuWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CafeManager3.View"
        mc:Ignorable="d"
        Title="Наше меню" Height="500" Width="850"
        MinWidth="850" MinHeight="500">

    <Window.Resources>
        <ResourceDictionary Source="\Media\StylesMainWindow.xaml"/>
    </Window.Resources>

    <Grid Background="Orange">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="3.3*"/>
        </Grid.ColumnDefinitions>

        <ScrollViewer Grid.Column="0" >
            <StackPanel Background="#FFCC5D33" >
                <Button Style="{StaticResource Style_ButtonFoodType}">
                    <Grid Height="73" Width="175" >
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="2.5*"/>
                        </Grid.ColumnDefinitions>
                        <Image Source="\Media\BurgerIcon.png" 
                          Grid.Column="0"/>
                        <TextBlock Text="Бургеры" Style="{StaticResource Style_LabelsFoodType}"
                           Grid.Column="1" Grid.ColumnSpan="2"/>
                    </Grid>
                </Button>
                <Button Style="{StaticResource Style_ButtonFoodType}">
                    <Grid Height="73" Width="175">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="2.5*"/>
                        </Grid.ColumnDefinitions>
                        <Image Source="\Media\BurgerIcon.png" 
                          Grid.Column="0"/>
                        <TextBlock Text="Холодные напитки" Style="{StaticResource Style_LabelsFoodType}"
                           Grid.Column="1" Grid.ColumnSpan="2"/>
                    </Grid>
                </Button>
                <Button Style="{StaticResource Style_ButtonFoodType}">
                    <Grid Height="73" Width="175">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="2.5*"/>
                        </Grid.ColumnDefinitions>
                        <Image Source="\Media\BurgerIcon.png" 
                          Grid.Column="0"/>
                        <TextBlock Text="Холодные напитки" Style="{StaticResource Style_LabelsFoodType}"
                           Grid.Column="1" Grid.ColumnSpan="2"/>
                    </Grid>
                </Button>
                <Button Style="{StaticResource Style_ButtonFoodType}">
                    <Grid Height="73" Width="175">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="2.5*"/>
                        </Grid.ColumnDefinitions>
                        <Image Source="\Media\BurgerIcon.png" 
                          Grid.Column="0"/>
                        <TextBlock Text="Холодные напитки" Style="{StaticResource Style_LabelsFoodType}"
                           Grid.Column="1" Grid.ColumnSpan="2"/>
                    </Grid>
                </Button>
                <Button Style="{StaticResource Style_ButtonFoodType}"/>
                <Button Style="{StaticResource Style_ButtonFoodType}"/>
                <Button Style="{StaticResource Style_ButtonFoodType}"/>
                <Button Style="{StaticResource Style_ButtonFoodType}"/>
                <Button Style="{StaticResource Style_ButtonFoodType}">
                    <Grid Height="73" Width="175">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="2.5*"/>
                        </Grid.ColumnDefinitions>
                        <Image Source="\Media\BurgerIcon.png" 
                          Grid.Column="0"/>
                        <TextBlock Text="Холодные напитки" Style="{StaticResource Style_LabelsFoodType}"
                           Grid.Column="1" Grid.ColumnSpan="2"/>
                    </Grid>
                </Button>
            </StackPanel>
        </ScrollViewer>

    </Grid>
</Window>
